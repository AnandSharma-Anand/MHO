<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="@color/teal_700" android:layout_width="fill_parent" android:layout_height="wrap_content" app:navigationIcon="@drawable/white_back_icon" app:title="Setting" app:titleTextColor="@color/white" />
    <androidx.cardview.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:background="@drawable/edittext_bordert"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20.0dip" android:layout_marginTop="10.0dip"
                android:layout_marginRight="20.0dip" android:layout_marginBottom="10.0dip">

                <EditText android:id="@+id/mobileno"
                    android:minHeight="80dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:singleLine="false"
                    android:gravity="top"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">


                    <ImageView android:id="@+id/clear_text"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_close_24"
                        app:tint="@color/grey" />

                    <TextView android:id="@+id/textcount"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:text="24"
                        android:textSize="16sp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>
            <com.skydoves.elasticviews.ElasticButton
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/update"
                android:background="@drawable/cornor_color_radius"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15.0dip"
                android:text="UPDATE" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>